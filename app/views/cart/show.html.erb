<!-- app/views/cart/show.html.erb -->
<h1>Your Shopping Cart</h1>
<% if @order_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
        <tr>
          <td><%= item.product.title %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.price) %></td>
          <td><%= number_to_currency(item.price * item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>Total: <%= number_to_currency(@order_items.sum { |item| item.price * item.quantity }) %></h2>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
